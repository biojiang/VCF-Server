                    var $searchBox = $('#sel_menu2');
                    for (var i = 0;i < $searchBox.children().length;i++){
                        searchedPhenotype.push($searchBox.children()[i].value);
                    }

                    //Select2插件初始化
                    var url = "/api/Select";
                    $searchBox.select2({
                        multiple:true,
                        language: eng == 1? "en":"zh-CN",
                        placeholder: eng == 1 ? 'Please enter HPO name or HPO ID' : '请输入症状名或症状ID',
                        ajax:
                        {
                            url:url,
                            dataType: 'json',
                            delay: 500,
                            contentType:"application/x-www-form-urlencoded;charset=UTF-8",
                            data: function (params){
                                return {
                                    query: params.term, // search term
                                };
                            },
                            processResults: function (data, page)
                            {
                                return{
                                    results: data.items
                                };
                            },
                            cache:true
                        },
                        escapeMarkup: function (markup)
                        {
                            //console.debug(markup)
                            return markup;
                        }, // let our custom formatter work
                        minimumInputLength: 2,
                        //maximumInputLength: 40,
                        templateResult:formatRepo,
                        templateSelection:formatRepoSelection,
                        allowClear: true
                    });
                });
                //select2辅助函数
                function formatRepo(repo)
                {
                    if (repo.loading) return repo.text;
                    repo.text = repo.name;
                    var markup = '<div class="select2-results__options" value='+repo.id+'>'
                        + repo.id+'|'+repo.text+'</div>';
                    return markup;
                }
                //select2辅助函数
                function formatRepoSelection(repo){
                    repo.selected = true;
                    repo.name = repo.id
                    if(repo.id == null || repo.name == ""){
                        repo.id = 'Please type items'
                        repo.name = repo.text
                    }
                    return repo.text;
                }

