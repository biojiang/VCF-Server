<script>
    //获取网络图数据并弹出。网络图数据已经由GPS引擎进行模版化
    function buildNetwork(source, target){
        var url = "/api/Network";
        $.ajax({
            url : url,
            data: {shpo:source,thpo:target},
            type: 'GET',
            dataType: 'text',
            success: function( msg ) {
                $('#network-data').html( msg );
                $('#myModal').modal('show');
